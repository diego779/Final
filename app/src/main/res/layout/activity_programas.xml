<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diegoandres.uniremingtonmanizales.Programas">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/btnhome"
                android:layout_width="69dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/boton_home1" />


            <Button
                android:id="@+id/button4"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estos son nuestros pregrados" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ingsistemas" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/admon_neg" />
            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="374dp"
                android:layout_height="149dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/contaduria" />

            <Button
                android:id="@+id/button5"
                style="@android:style/Widget.Holo.Light.Button.Toggle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Estas son nuestras especializaciones" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="374dp"
                android:layout_height="149dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/altagerencia" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="374dp"
                android:layout_height="149dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/gerenciamercadeo"/>

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="374dp"
                android:layout_height="149dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/revisoriafiscal" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
